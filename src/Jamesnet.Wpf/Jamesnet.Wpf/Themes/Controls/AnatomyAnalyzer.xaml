<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:Jamesnet.Wpf.Controls"
    xmlns:units="clr-namespace:Jamesnet.Wpf.UI.Units">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Jamesnet.Wpf;Component/Themes/Controls/DarkThemeWindow.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type ctrls:AnatomyAnalyzer}"
           BasedOn="{StaticResource {x:Type ctrls:DarkThemeWindow}}">
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="Title" Value="WPF Anatomy Analyzer"/>
        <Setter Property="Content">
            <Setter.Value>
                <ctrls:JamesGrid Rows="*" Columns="Auto, *">
                    <units:ControlTreeView ItemsSource="{Binding Controls}"
                                           SelectionCommand="{Binding TreeItemSelectedCommand}"/>
                    <ctrls:JamesRegion RegionName="AnatomyObjectRegion"
                                       MinWidth="200" MinHeight="100"/>
                </ctrls:JamesGrid>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>